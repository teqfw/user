{
  "entity": {
    "user": {
      "comment": "Registry to user related data.",
      "attr": {
        "id": {"type": "id"},
        "date_created": {
          "comment": "Date-time for user registration.",
          "type": "datetime",
          "default": "current"
        },
        "key_pub": {
          "comment": "Public key for encryption and authentication.",
          "type": "text"
        },
        "username": {
          "comment": "Unique name to identify user by humans (low case).",
          "type": "string"
        }
      },
      "index": {
        "uq_username": {"type": "unique", "attrs": ["username"]}
      }
    }
  }
}
